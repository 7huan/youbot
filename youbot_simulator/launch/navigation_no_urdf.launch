<launch>
	<!-- run a map server -->
	<node name="map_server" pkg="map_server" type="map_server" args="$(find youbot_simulator)/map/testmap3.yaml"/>

	<!-- publish a TF between /map and /odom -->
	<node name="static_transform_publisher" pkg="tf" type="static_transform_publisher" args="0 0 0 0 0 0 map odom 10"/>
	
	<!-- start the fake odometry publisher, which provides TF from /odom to /base_footprint and publishes odom messages based on cmd_vel -->
	<include file="$(find fake_odom_publisher)/launch/youbot_fake_odom.launch" />

	<!-- start navigation -->
	<include file="$(find youbot_navigation_global)/launch/move_base_global.launch" />
</launch>
